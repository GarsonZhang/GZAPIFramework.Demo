
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script>
        var app = angular.module('app', []);
        app.controller("apilist", function ($scope, $http) {
            $scope.apidata;
            $http.get("/api/apilist")
                .success(function (response) {
                    $scope.apidata = response;
                })
            $scope.CItem = "这里是内容！";
            $scope.showDetail = function (item) {
                $scope.CItem = item;
            }
        });
    </script>
    <style>
        html, body {
            height: 100%;
        }

        .fillheight {
            height: 100%;
        }

        .scroll_y {
            overflow-y: scroll;
        }
    </style>

</head>
<body ng-app="app" ng-controller="apilist">
    <div class="container-fluid fillheight">
        <div class="row fillheight">
            <div class="col-lg-3 col-md-4 col-sm-6 fillheight scroll_y">
                <table class="table table-hover">

                    <thead>
                        <tr>
                            <th>
                                接口号
                            </th>
                            <th>
                                描述
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in apidata" ng-click="showDetail(item)">
                            <td>
                                {{item.Code}}
                            </td>
                            <td>
                                {{item.Description}}
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-9 col-md-8 col-sm-6 fillheight scroll_y">
                <h2>请求JSON示例</h2>
                <pre>{{CItem.RequestJson}}</pre>
                <h2>参数介绍</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                字段名
                            </th>
                            <th>
                                是否必须
                            </th>
                            <th>
                                描述
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in CItem.RequestBody">
                            <td>
                                {{item.FieldName}}
                            </td>
                            <td>
                                {{item.IsMust}}
                            </td>
                            <td>
                                {{item.Description}}
                            </td>

                        </tr>
                    </tbody>
                </table>
                <h2>返回JSON示例</h2>
                <pre>{{CItem.ResponseJson}}</pre>
                <h2>参数介绍</h2>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                字段名
                            </th>
                            <th>
                                描述
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in CItem.ResponseBody">
                            <td>
                                {{item.FieldName}}
                            </td>
                            <td>
                                {{item.Description}}
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
